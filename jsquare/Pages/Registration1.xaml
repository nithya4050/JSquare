<Page x:Class="jsquare.Pages.Registration1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:jsquare.Pages"
      xmlns:lang ="clr-namespace:jsquare.Properties"

      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="400" Background="#F4F4F9"

    Title="Registration1" Height="650" Width="400">

    <Grid>
         <Border  CornerRadius="3" Padding="2" Width="400"
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
              
            <StackPanel x:Name="Stack1_registration" Visibility="Visible">
           
            <!-- Header for registration form-->
                <TextBlock Text="{x:Static lang:Resources.registration}" FontSize="20"
                 Margin="0,0,0,20"  FontWeight="Bold" HorizontalAlignment="Center"
                 VerticalAlignment="Top"  Foreground="#3258a8" ></TextBlock>



                <TextBlock Text="{x:Static lang:Resources.employeetype}" FontSize="14" FontWeight="SemiBold" Margin="40,0,0,20" Foreground="#3258a8"/>
                <!-- User Type Dropdown -->

                <ComboBox Width="300" Height="35" Margin="0,0,0,15">
                    <ComboBoxItem Content="Staff" />
                    <ComboBoxItem Content="Student" />
                </ComboBox>

                <!-- Fullname -->
                <TextBlock Text="{x:Static lang:Resources.fullname}" FontSize="14" FontWeight="SemiBold" Margin="40,0,0,5" Foreground="#3258a8"/>
                <TextBox x:Name="txtRegFullname" Width="300" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15" />

                <!--Reg Email -->
                <TextBlock Text="{x:Static lang:Resources.emailid}" FontSize="14" FontWeight="SemiBold" Margin="40,0,0,5" Foreground="#3258a8"/>
                <TextBox x:Name="txtRegEmail" Width="300" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15" />


                <!-- Password -->
                <TextBlock Text="{x:Static lang:Resources.password}" FontSize="14" FontWeight="SemiBold" Margin="40,0,0,10" Foreground="#3258a8"/>
                <TextBox x:Name="txtRegpassword" Width="300" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15" />


                <!--Confirm Password -->
                <TextBlock Text="{x:Static lang:Resources.conformpassword}" FontSize="14" FontWeight="SemiBold" Margin="40,0,0,10" Foreground="#3258a8"/>
                <TextBox x:Name="txtRegconfirmpassword" Width="300" Height="35" VerticalContentAlignment="Center" Margin="0,0,0,15" />


                <!--<TabControl FontWeight="SemiBold" Padding="10" Foreground="#3258a8">

               <TabItem Header="1">
                   <StackPanel>
                       <TextBlock Text="{x:Static lang:Resources.employeetype}" FontSize="14" FontWeight="SemiBold" Margin="40,0,0,20"/>
                      
                       <ComboBox Width="300" Height="35" Margin="0,0,0,15">
                           <ComboBoxItem Content="Staff" />
                           <ComboBoxItem Content="Student" />
                       </ComboBox>

                     
               <TabItem Header="2">
                   <StackPanel>


                   </StackPanel>
               </TabItem>
           </TabControl-->

                <Button x:Name="btnone_Registration" Content="1" Click="btnone_Registration_Click" Height="25" Width="20" Background="#FFF" Foreground="Black" Padding="0" Margin="1"></Button>

            </StackPanel>
        </Border>
    </Grid>
</Page>
